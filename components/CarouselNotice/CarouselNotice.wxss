/* components/CarouselNotice/CarouselNotice.wxss */
.notice-box {
  overflow: hidden;
}

.notice-roll {
  display: inline-block;
  min-width: 200%;
  white-space: nowrap;
}

.notice-text {
  display: inline-block;
  box-sizing: border-box;
  min-width: 50%;
  padding: 10rpx;
  padding-right: 100rpx;
}

.notice-text-align {
  padding-right: 0;
  text-align: center;
}

.notice-animation {
  animation: carousel 8s linear 0s infinite;
}

@keyframes carousel {
  from {  }
  to { transform: translateX(-50%); }
}